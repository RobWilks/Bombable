<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>hangar-lights.ac</path>
  
  <animation>
    <type>select</type>
    <object-name>innerlight</object-name>
    <object-name>outerlight</object-name>
    <condition>
      <property>/sim/rendering/rembrandt/enabled</property>
    </condition>
  </animation>

  <animation>
    <type>light</type>
    <light-type>spot</light-type>
    <name>ExtRemb</name>
    <object-name>innerlight</object-name>
    <object-name>outerlight</object-name>
    <nopreview/>
    <position>
      <x>-9.5</x>
      <y>0.0</y>
      <z>5.8</z>
    </position>
    <direction>
      <x>0.0</x>
      <y>0.0</y>
      <z>-1.0</z>
    </direction>
    <ambient>
      <r>0.20</r>
      <g>0.1</g>
      <b>0.1</b>
      <a>1</a>
    </ambient>
    <diffuse>
      <r>0.45</r>
      <g>0.15</g>
      <b>0.15</b>
      <a>1</a>
    </diffuse>
    <specular>
      <r>0.55</r>
      <g>0.25</g>
      <b>0.20</b>
      <a>1.0</a>
    </specular>
    <dim-factor>
      <expression>
        <product>
          <value>-1</value>
          <sum>
            <product>
              <max>
                <pow>
                  <cos><property>/sim/time/sun-angle-rad</property></cos>
                  <value>0.3</value>
                </pow>
                <value>0</value>
              </max>
              <value>1.0</value>
            </product>
            <value>-1</value>
          </sum>
          <!-- <property>doorlight/intensity</property> -->
		  <value>0.4</value>
        </product>
      </expression>
    </dim-factor>
    <attenuation>
      <c>0.025</c>
      <l>0.015</l>
      <q>0.0015</q>
    </attenuation>
    <exponent>0.01</exponent>
    <cutoff>100</cutoff>
    <near-m>0.01</near-m>
    <far-m>1000</far-m>
  </animation>
  
   <animation>
    <type>scale</type>
    <object-name>outerlight</object-name>
    <property>hangar/door/position-norm</property>
    <x-min>0.0</x-min>
    <y-min>1.0</y-min>
    <z-min>0.0</z-min>
    <x-factor>1.0</x-factor>
    <y-factor>0.0</y-factor>
    <z-factor>1.0</z-factor>
  </animation>

  
  <animation>
    <type>select</type>
    <object-name>outerlight</object-name>
    <condition>
      <property>hangar/door/position-norm</property>
    </condition>
  </animation>

</PropertyList>
