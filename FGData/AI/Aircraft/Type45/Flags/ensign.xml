
<PropertyList>

 <path>fguk-ensign.ac</path> 
 
 <animation>
  <type>select</type>
  <object-name>part1</object-name>
  <object-name>part2</object-name>
  <object-name>part3</object-name>
  <condition>
   <greater-than>
    <property><property>/environment/wind-speed-kt</property></property>
	<value>7.5</value>
   </greater-than>
  </condition>
 </animation>
 
 <animation>
  <type>select</type>
  <object-name>halfway</object-name>
  <condition>
   <greater-than>
    <property>/environment/wind-speed-kt</property>
	<value>3.99</value>
   </greater-than>
   <less-than>
    <property>/environment/wind-speed-kt</property>
	<value>7.499</value>
   </less-than>
  </condition>
 </animation>
 
 <animation>
  <type>select</type>
  <object-name>limp</object-name>
  <condition>
   <less-than>
    <property>/environment/wind-speed-kt</property>
	<value>4</value>
   </less-than>
  </condition>
 </animation>
 
 <animation>
  <object-name>part1</object-name>
  <object-name>part2</object-name>
  <object-name>part3</object-name>
  <object-name>halfway</object-name>
  <object-name>limp</object-name>
  <type>rotate</type>
  <property>/environment/wind-apparent-heading-deg</property>
  <factor>1</factor>
  <offset-deg>0</offset-deg>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>
 
 <animation>
  <type>scale</type>
  <object-name>part1</object-name>
  <object-name>part2</object-name>
  <object-name>part3</object-name>
  <property>/flags/flappiness-norm</property>
  <x-min>0.85</x-min>
  <y-min>-1.0</y-min>
  <z-min>1.0</z-min>
  <x-factor>-0.15</x-factor>
  <y-factor>-1</y-factor>
  <z-factor>0</z-factor>
 </animation>
 


</PropertyList>