<?xml version="1.0" encoding="UTF-8"?>

<!-- This should produce nice sort transparent exhaust for a slightly dirty-burning engine objects. -->

<PropertyList>
	<particlesystem>
		<name>smoke</name>
		<texture>smoke.png</texture>
		<emissive>false</emissive>
		<lighting>true</lighting>
		<type>normal</type>
		<align>billboard</align>
		<attach>world</attach>
		
		<offsets>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
			<pitch-deg>0.0</pitch-deg>
		</offsets>
		
		<condition>
				<property>/bombable/menusettings/fire-particles/skywriting-trigger</property>
		</condition>
	
		<placer>
			<type>sector</type>
			<radius-min-m>0.0</radius-min-m>
			<radius-max-m>10.0</radius-max-m>
		</placer>
		
		<counter>
			<particles-per-sec>
				<value>20</value>
				<spread>0</spread>
			</particles-per-sec>
		</counter>
		
		<particle>
			<start>
				<color>
					<red>
						<value>0.7</value>
					</red>
					<green>
						<value>0.75</value>
					</green>
					<blue>
						<value>0.65</value>
					</blue>
					<alpha>
						<value>0.8</value>
					</alpha>
				</color>
				<size>
					<value>7</value>
					
				</size>
			</start>
			<end>
				<color>
					<red>
						<value>0.50</value>
					</red>
					<green>
						<value>0.55</value>
					</green>
					<blue>
						<value>0.45</value>
					</blue>
					<alpha>
						<value>0.1</value>
					</alpha>
				</color>
				<size>
					<value>23</value>
				</size>
			</end>
			<life-sec>
				<property>/bombable/fire-particles/skywriting-life-sec</property>
			</life-sec>
			<mass-kg>1.204</mass-kg><!-- Air density: 1,204Kg/m3 at 20Â°C ??? WRONG should be 1.204 kg / m3 -->
			<radius-m>0.605</radius-m>
		</particle>
		
		<program>
			<fluid>air</fluid>
			<!--  because this is exhaust we'll just let it hang there, no gravity-->
			<gravity type="bool">true</gravity>
			<wind type="bool">false</wind>
		</program>
	</particlesystem>
	

</PropertyList>
