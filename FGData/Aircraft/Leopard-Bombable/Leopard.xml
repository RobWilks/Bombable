<?xml version="1.0" encoding="UTF-8"?>

<PropertyList include="Leopard-bombableinclude.xml">
<!-- <PropertyList> -->
	<description>Tank Leopard. This main battle tank is designed to be a static or moving (set as a ship or aircraft with heading, speed, rudder settings) air-to-ground target. You can damage it with heavy gun or bombs.
	If the tank is really damaged you will see fire and smoke.
	TODO: _ add MultiPlayer mode, in order to share scenario with multiple tanks and aircrafts.	</description>
	<author>Rob Wilkinson - Brent HUGH</author>

	<status>beta</status>

	<path>Models/Leopard2A6_v23.ac</path>

	<!-- Modified to allow the pitch and roll of the model to be controlled by a scenario -->
	
	<offsets>
		<x-m>0.0</x-m>
		<y-m>0.0</y-m>
		<z-m>0.0</z-m>
		<pitch-deg>0</pitch-deg>
		<roll-deg>0</roll-deg>
	</offsets>

	<!-- animations -->

	<animation>
		<name>Leopard-tank</name>
		<path>Leopard2A6_v23.ac</path>
	</animation>
	
	<animation>
		<name>Leopard-body</name>
		<object-name>Drive_L</object-name>
		<object-name>Drive_R</object-name>
		<object-name>Hull</object-name>
		<object-name>Turret</object-name>
		<object-name>Gun</object-name>
	</animation>
	
<!-- 	<animation>
		<type>material</type>
		<object-name>Cuppola_L</object-name>
		<object-name>Cuppola_R</object-name>
		<texture-prop>bombable/texture-corps-path</texture-prop>
		<transparency>
			<alpha>1.0</alpha>
		</transparency>
	</animation> -->
	
	<animation>
		<type>rotate</type>
		<object-name>Leopard-tank</object-name>
		<property>orientation/pitch-animation</property>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Leopard-tank</object-name>
		<property>orientation/roll-animation</property>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Turret</object-name>
		<object-name>Gun</object-name>
		<property>main_gun/turret-pos-deg</property>
		<center>
			<x-m>-0.132562</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Gun</object-name>
		<property>main_gun/cannon-elev-deg</property>	
		<center>
			<x-m>-1.5</x-m>
			<y-m>0.0</y-m>
			<z-m>2.08134</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>MG</object-name>
		<expression>
			<difference>
				<property>turret_MG/turret-pos-deg</property>
				<property>main_gun/turret-pos-deg</property>
			</difference>
		</expression>
		<center>
			<x-m>0.832447</x-m>
			<y-m>-1.11098</y-m>
			<z-m>2.83373</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>MG</object-name>
		<property>turret_MG/cannon-elev-deg</property>
		<!-- 		<interpolation>
			<entry><ind>-90</ind><dep>-10</dep></entry>
			<entry><ind>-10</ind><dep>-10</dep></entry>
			<entry><ind>45</ind><dep>45</dep></entry>
			<entry><ind>90</ind><dep>45</dep></entry>
		</interpolation> -->
		<center>
			<x-m>0.832447</x-m>
			<y-m>-1.11098</y-m>
			<z-m>2.83373</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>


</PropertyList>