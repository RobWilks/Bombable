
<PropertyList>

 <path>phalanx_v5.ac</path>
 
 	<params>
		<n1>XXX/turret-pos-deg</n1>
		<n2>XXX/cannon-elev-deg</n2>
		<n3>XXX/cannon-spinspeed</n3>
	</params>
 
  <effect>
   <inherits-from>Effects/model-transparent</inherits-from>
   <object-name>flame</object-name>
  </effect>
 
 <model>
  <path>../../Effects/Phalanx/gunsmoke-stbd.xml</path>
  <name>smoke</name>
  <offsets>
   <x-m>1.126</x-m>
   <y-m>0</y-m>
   <z-m>1.093</z-m>
   <pitch-deg>0</pitch-deg>
   <heading-deg>180</heading-deg>
  </offsets>
 </model>
 
 <model>
    <path>../../Armament/Phalanx/phalanx-tracer-stbd.xml</path>
    <name>tracer</name>
    <offsets>
      <x-m>1.135</x-m>
      <y-m>0</y-m>
      <z-m>1.1</z-m>
      <pitch-deg>90</pitch-deg>
    </offsets>
  </model>
 
 <animation>
  <type>select</type>
  <object-name>flame</object-name>
  <condition>false
  </condition>
 </animation> 
  
 <animation>
  <object-name>turret</object-name>
  <object-name>support_left</object-name>
  <object-name>support_right</object-name>
  <object-name>body</object-name>
  <object-name>barrel</object-name>
  <object-name>tracer</object-name>
  <type>rotate</type>
  <property alias="../../params/n1"/>
  <factor>1</factor>
  <offset-deg>0</offset-deg>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>
 
 <animation>
  <object-name>body</object-name>
  <object-name>barrel</object-name>
  <object-name>tracer</object-name>
  <type>rotate</type>
  <property alias="../../params/n2"/>
  <factor>1</factor>
  <offset-deg>0</offset-deg>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>1.1</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>
 
 <animation>
  <object-name>barrel</object-name>
  <type>spin</type>
  <property alias="../../params/n3"/>
  <factor>600</factor>
  <center>
   <x-m>0.1449</x-m>
   <y-m>0   </y-m>
   <z-m>2.0</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

</PropertyList>
