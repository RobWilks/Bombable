
<PropertyList>

 <path>internal-lights.ac</path>
 
  <animation>
    <type>light</type>
    <light-type>spot</light-type>
    <name>PortRed</name>
    <object-name>bridgelights.2</object-name>
    <nopreview/>
    <position>
      <x>-21.2</x>
      <y>-3.6</y>
      <z>13.85</z>
    </position>
    <direction>
      <x>0.0</x>
      <y>0.0</y>
      <z>-1.0</z>
    </direction>
    <ambient>
      <r>0.20</r>
      <g>0.1</g>
      <b>0.1</b>
      <a>1</a>
    </ambient>
    <diffuse>
      <r>0.45</r>
      <g>0.15</g>
      <b>0.15</b>
      <a>1</a>
    </diffuse>
    <specular>
      <r>0.55</r>
      <g>0.25</g>
      <b>0.20</b>
      <a>1.0</a>
    </specular>
    <dim-factor>
      <expression>
        <product>
          <value>-1</value>
          <sum>
            <product>
              <max>
                <pow>
                  <cos><property>sim/time/sun-angle-rad</property></cos>
                  <value>0.3</value>
                </pow>
                <value>0</value>
              </max>
              <value>1.0</value>
            </product>
            <value>-1</value>
          </sum>
          <!-- <property>doorlight/intensity</property> -->
		  <value>0.75</value>
        </product>
      </expression>
    </dim-factor>
    <attenuation>
      <c>0.35</c>
      <l>0.015</l>
      <q>0.0015</q>
    </attenuation>
    <exponent>2</exponent>
    <cutoff>100</cutoff>
    <near-m>0.01</near-m>
    <far-m>1000</far-m>
  </animation>
  
